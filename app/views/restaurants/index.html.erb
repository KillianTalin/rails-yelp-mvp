<div class="wrapper">
  <div class="container">
    <p id="notice"><%= notice %></p>

    <div class="table-title">
      <h1>Restaurants</h1>
    </div>
    <%= link_to 'Add a restaurant', new_restaurant_path, class: "link-add-restaurant" %>
    <div class="table">
      <table>
          <thead class="thead">
            <tr>
              <th>Nom</th>
              <th>Adresse</th>
              <th>Téléphone</th>
              <th>Categorie</th>
              <th colspan="3"></th>
            </tr>
          </thead>

        <tbody>
          <% @restaurants.each do |restaurant| %>
            <tr>
              <td><%= restaurant.name %></td>
              <td><%= restaurant.address %></td>
              <td><%= restaurant.phone_number %></td>
              <td><%= restaurant.category %></td>
              <td><%= link_to 'Show', restaurant_path(restaurant), class: "link-to-show" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <br>
  </div>
</div>
